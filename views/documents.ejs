<%- include("./partials/header") %>

<%- include("./navbar/menu") %>

<div class="container mt-4">
        
        <div class="row align-items-start">

            <div class="col">
                <label for="my_table"><b><i>Documents List</i></b></label>
                <hr class="my-4">
                <table class="table" id="my_table">
                    <thead>
                    <tr>
                        <th scope="col">Original Name</th>
                        <th scope="col">Name</th>
                        <th scope="col">Document Size (bytes)</th>
                        <th scope="col">Convert Time (ms)</th>
                    </tr>
                    </thead>
                    <tbody>
                        <% if (typeof documents != 'undefined') { %> <% documents.forEach(document => { %>
                    <tr>
                        <th scope="row"><%= document.original_name %></th>
                        <td><%= document.name %></td>
                        <td><%= document.doc_size %></td>
                        <td><%= document.conv_time %></td>
                    </tr>
                    <% }) %> <% } %>
                    </tbody>
                </table>
            </div>           

        </div>
    </div>

    <%- include("./partials/footer") %>